@CHARSET "UTF-8";

body,div,ul,li,h1,table,tr,td {
	margin: 0px;
	padding: 0px;
}

body {
	background-color: #0070A2;
}

#login {
	width: 400px;
	height: 250px;
	border: 1px solid black;
	margin: 100px auto;
	border-radius: 5%;
	background-color: white;
}

#title {
	width: 250px;
	height: 40px;
	line-height: 40px;
	margin: 0px auto;
	border: 1px solid #2299EE;
	border-bottom-right-radius: 10%;
	border-bottom-left-radius: 10%;
	text-align: center;
	background-color: #2299EE;
	letter-spacing: 0.5em;
	color: white;
	font-size: 20px;
}

#loginTable {
	margin: 0px auto;
	border-spacing: 0px 13px;
}

.btn {
	background-color: #2299EE;
	border-radius: 10%;
	font-size: 18px;
	color: white;
	width: 296px;
}

#userName,#password {
	width: 240px;
}

#code {
	width: 100px;
}

#sendCode {
	background-color: #2299EE;
	border-radius: 5%;
	margin-left: 35px;
	font-size: 16px;
	color: white;
	width: 102px;
	height: 27px;
}

#codeOutPut {
	background-color: wight;
	width: 205px;
	margin: 4px auto;
	height: 21px;
	font-size: 15px;
	text-align: center;
}