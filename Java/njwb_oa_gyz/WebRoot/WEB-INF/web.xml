<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
		<welcome-file-list>
				<welcome-file>njwb/login.jsp</welcome-file>
				<welcome-file>index.jsp</welcome-file>
		</welcome-file-list>

		<!-- 登录验证 -->
		<filter>
				<filter-name>authorityFilter</filter-name>
				<filter-class>com.njwb.oa.filter.AuthorityFilter</filter-class>
		</filter>
		<filter-mapping>
				<filter-name>authorityFilter</filter-name>
				<url-pattern>/*</url-pattern>
		</filter-mapping>

		<!-- 字符编码 -->
		<filter>
				<filter-name>characterEncodingFilter</filter-name>
				<filter-class>com.njwb.oa.filter.CharacterEncodingFilter</filter-class>
				<init-param>
						<param-name>encoding</param-name>
						<param-value>UTF-8</param-value>
				</init-param>
		</filter>
		<filter-mapping>
				<filter-name>characterEncodingFilter</filter-name>
				<url-pattern>*.do</url-pattern>
		</filter-mapping>

		<!-- 分发器 -->
		<servlet>
				<servlet-name>dispatcherServlet</servlet-name>
				<servlet-class>com.njwb.oa.dispatcher.DispatcherServlet</servlet-class>
		</servlet>

		<servlet-mapping>
				<servlet-name>dispatcherServlet</servlet-name>
				<url-pattern>*.do</url-pattern>
		</servlet-mapping>

</web-app>
